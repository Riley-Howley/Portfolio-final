                </header>
            </section>

            <section class="section s2" id="about">
                <div class="about pt-5 text-center position-relative d-flex justify-content-around align-items-center">
                    <div class="image-about-con">
                        <div class="d-flex flex-row mt-4 bg-trasparent pic-bg-about">
                            <div class="about-photo"></div>
                        </div>
                    </div>
                    <div class="about-info animate" data-anim-type="fadeInLeft">
                        <h1 id="about" class="about-head text-center fw-bold">About</h1>
                        <hr class="bg-green mx-auto">
                        <div class="para align-items-space-around">
                            @foreach (var item in Model.AboutModel)
                            {
                                <p>@Html.DisplayFor(modelItem => item.Desciption)</p>
                            }
                        </div>
                    </div>
                </div>
            </section>
            <section class="section s3" id="services">
                <div class="services pt-5 position-relative">
                    <h1 class="d-flex justify-content-center fw-bold">My Services</h1>
                    <hr class="service-hr mx-auto mb-4">
                    <div class="d-flex justify-content-around flex-wrap">
                        @foreach (var item in Model.ServiceModel)
                        {
                            <div class="flip-card">
                                <div class="flip-card-inner position-relative text-center ">
                                    <div class="flip-card-front position-absolute">
                                        <div class="service-container bg-white" style="background-image: url('../Images/Services/@Html.DisplayFor(modelItem => item.BackgroundImage)'); background-size: cover"></div>
                                    </div>
                                    <div class="flip-card-back position-absolute">
                                        <h2 class="text-white mt-4">@Html.DisplayFor(modelItem => item.ServicesTitle)</h2>
                                        <p class="text-white">@Html.DisplayFor(modelItem => item.ServicesDescription)</p>
                                        <div class="icons d-flex justify-content-around">
                                            <i class="@item.Icon1"></i>
                                            <i class="@item.Icon2"></i>
                                            <i class="@item.Icon3"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
            <section class="section s4" id="skills">
                <div class="skills-section">
                    <div class="skills-col">
                        <h1 class="text-center fw-bold pt-5">My Skills</h1>
                        <hr class="skills-hr mx-auto">
                        <h2 class="text-center fs-4">Technical Skills</h2>
                        <div class="skills-row">
                            <div class="skills">
                                @foreach (var item in Model.TechnicalSkillsModel)


                                    if (item.TechnicalSkillsID % 2 == 0)
                                    {
                                        <div class="col pt-2 pb-2">
                                            <ul class="bars_list list-unstyled lh-lg">
                                                <li class="ps-5 pe-5">@Html.DisplayFor(modelItem => item.TechnicalSkillTitle)<span class="float-end">@Html.DisplayFor(modelItem => item.TechnicalSkillPercentage)%</span> </li>
                                                <li class="pe-5 ps-5">
                                                    <div class="progress border border-secondary bg-transparent">
                                                        <div class="progress-bar bg-green" role="progressbar" aria-valuenow="@item.TechnicalSkillPercentage" aria-valuemin="0" aria-valuemax="100" style="width: @item.TechnicalSkillPercentage%"></div>
                                                    </div>
                                                </li>
                                            </ul>

                                        </div>
                                    }
                            </div>
                            <div class="skills">
                                @foreach (var item in Model.TechnicalSkillsModel)
                                {

                                    if (item.TechnicalSkillsID % 2 != 0)
                                    {
                                        <div class="col pt-2 pb-2">
                                            <ul class="bars_list list-unstyled lh-lg">
                                                <li class="ps-5 pe-5"><span class="float-end">@Html.DisplayFor(modelItem => item.TechnicalSkillPercentage)%</span>@Html.DisplayFor(modelItem => item.TechnicalSkillTitle) </li>
                                                <li class="pe-5 ps-5">
                                                    <div class="progress border border-secondary bg-transparent">
                                                        <div class="progress-bar bg-green" role="progressbar" aria-valuenow="@item.TechnicalSkillPercentage" aria-valuemin="0" aria-valuemax="100" style="width: @item.TechnicalSkillPercentage%"></div>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                        <h2 class="text-center fs-4 soft">Soft Skills</h2>
                        <div class="circle-con d-flex justify-content-around">

                            @foreach (var item in Model.SoftSkillsModel)
                            {
                                if (item.SoftSkillsID % 2 == 0)
                                {
                                    <div class="col-md-3 col-sm-6">
                                        <h3 class="text-center">@Html.DisplayFor(modelItem => item.SoftSkillTitle)</h3>
                                        <div class="circle" data-value="0.@Html.DisplayFor(modelItem => item.SoftSkillpercentage)"><strong></strong></div>
                                    </div>
                                }

                            }
                        </div>

                        <div class="circle-con d-flex justify-content-around">

                            @foreach (var item in Model.SoftSkillsModel)
                            {
                                if (item.SoftSkillsID % 2 != 0)
                                {
                                    <div class="col-md-3 col-sm-6">
                                        <h3 class="text-center">@Html.DisplayFor(modelItem => item.SoftSkillTitle)</h3>
                                        <div class="circle" data-value="0.@Html.DisplayFor(modelItem => item.SoftSkillpercentage)"><strong></strong></div>
                                    </div>
                                }

                            }
                        </div>

                    </div>
                </div>
            </section>
            <section class="section s5">
                <div class="experience">
                    <h1 class="text-center fw-bold">Experience</h1>
                    <hr class="experience-hr mx-auto">
                    @foreach (var item in Model.ExperienceModel)
                    {
                        if (item.IsPosLeft)
                        {
                            <div class="experience-row d-flex justify-content-center align-content-center">
                                <div class="logo-con" style="background-image: url(@Html.DisplayFor(modelItem => item.LogoImage));"></div>
                                <div class="work-desc align-self-center">
                                    <div class="work-years">
                                        <h4 class="text-white fw-bold text-center pt-3">@Html.DisplayFor(modelItem => item.Title)</h4>
                                        <h4 class="text-green fw-bold text-center pt-1">@Html.DisplayFor(modelItem => item.Dates)</h4>
                                        <p class="text-white text-center">
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </p>
                                        <div class="buttons d-flex flex-row justify-content-center">
                                            <a href="@Html.DisplayFor(modelItem => item.WebsiteURl)" class="fs-5 text-white btn bg-green">Check Them Out</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="experience-row d-flex justify-content-center align-content-center">
                                <div class="work-desc-2 align-self-center">
                                    <div class="work-years">
                                        <h4 class="text-white fw-bold text-center pt-3">@Html.DisplayFor(modelItem => item.Title)</h4>
                                        <h4 class="text-green fw-bold text-center pt-1">@Html.DisplayFor(modelItem => item.Dates)</h4>
                                        <p class="text-white text-center">
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </p>
                                        <div class="buttons d-flex flex-row justify-content-center">
                                            <a href="@Html.DisplayFor(modelItem => item.WebsiteURl)" class="fs-5 text-white btn bg-green">Check Them Out</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="logo-con-2" style="background-image: url('@Html.DisplayFor(modelItem => item.LogoImage)');"></div>
                            </div>
                        }
                    }
                </div>
            </section>
